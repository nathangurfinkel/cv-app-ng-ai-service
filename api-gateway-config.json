{
  "openapi": "3.0.1",
  "info": {
    "title": "CV Builder API Gateway",
    "version": "1.0.0",
    "description": "API Gateway configuration for CV Builder microservices"
  },
  "servers": [
    {
      "url": "https://api.yourdomain.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/ai/{proxy+}": {
      "x-amazon-apigateway-any-method": {
        "x-amazon-apigateway-integration": {
          "type": "aws_proxy",
          "httpMethod": "POST",
          "uri": "arn:aws:lambda:eu-north-1:YOUR_ACCOUNT_ID:function:cv-builder-ai-service",
          "passthroughBehavior": "when_no_match",
          "payloadFormatVersion": "2.0"
        }
      }
    },
    "/pdf/{proxy+}": {
      "x-amazon-apigateway-any-method": {
        "x-amazon-apigateway-integration": {
          "type": "http_proxy",
          "httpMethod": "ANY",
          "uri": "http://YOUR_FARGATE_ALB_DNS_NAME:8000/{proxy}",
          "passthroughBehavior": "when_no_match"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}
